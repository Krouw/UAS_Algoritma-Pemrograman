#include <iostream>
#include <iomanip>
using namespace std;

float hitungNilaiAkhir(float tugas, float uts, float uas) {
    return (0.30 * tugas) + (0.30 * uts) + (0.40 * uas);
}

char tentukanGrade(float nilaiAkhir) {
    if (nilaiAkhir >= 80) return 'A';
    else if (nilaiAkhir >= 70) return 'B';
    else if (nilaiAkhir >= 59) return 'C';
    else if (nilaiAkhir >= 50) return 'D';
    else return 'E';
}

int main() {
    char ulang;

    do {
        string nama[5];
        float tugas[5], uts[5], uas[5], akhir[5];
        char grade[5];

        cout << "=== PROGRAM PERHITUNGAN NILAI AKHIR MAHASISWA ===\n\n";

        for (int i = 0; i < 5; i++) {
            cout << "Mahasiswa ke-" << i + 1 << endl;
            cout << "Nama          : ";
            cin >> nama[i];
            cout << "Nilai Tugas   : ";
            cin >> tugas[i];
            cout << "Nilai UTS     : ";
            cin >> uts[i];
            cout << "Nilai UAS     : ";
            cin >> uas[i];

            akhir[i] = hitungNilaiAkhir(tugas[i], uts[i], uas[i]);
            grade[i] = tentukanGrade(akhir[i]);

            cout << endl;
        }

        cout << "\n=== TAMPILAN KELUARAN ===\n";
        cout << "---------------------------------------------------------------\n";
        cout << left << setw(4) << "No"
             << setw(15) << "Nama"
             << setw(10) << "Tugas"
             << setw(10) << "UTS"
             << setw(10) << "UAS"
             << setw(10) << "Akhir"
             << setw(7) << "Grade" << endl;
        cout << "---------------------------------------------------------------\n";

        for (int i = 0; i < 5; i++) {
            cout << left << setw(4) << i + 1
                 << setw(15) << nama[i]
                 << setw(10) << tugas[i]
                 << setw(10) << uts[i]
                 << setw(10) << uas[i]
                 << setw(10) << fixed << setprecision(2) << akhir[i]
                 << setw(7) << grade[i] << endl;
        }

        cout << "---------------------------------------------------------------\n";
        cout << "\nIngin menjalankan program dari awal (y/n)? ";
        cin >> ulang;

        cout << endl;

    } while (ulang == 'y' || ulang == 'Y');

    cout << "Terima kasih telah menggunakan program ini.\n";
    return 0;
}
